# -*- coding: utf-8; mode: tcl; tab-width: 4; indent-tabs-mode: nil; c-basic-offset: 4 -*- vim:fenc=utf-8:ft=tcl:et:sw=4:ts=4:sts=4
PortSystem          1.0
PortGroup           github 1.0

name                chunkwm-tiling

github.setup        koekeishiya chunkwm tiling-0.1.0
categories          aqua
platforms           darwin
license             MIT

maintainers         @koekeishiya
description         Tiling plugin for chunkwm
long_description    ${name}: ${description}

homepage            https://github.com/koekeishiya/chunkwm
checksums           rmd160  4f0ba7437eae589ad3f09c2d2d9baad5843f05ab \
                    sha256  8943c2237bace025fc7998492f60f59a9f4655f466768111c4327d3bef558b2b

supported_archs     x86_64
use_configure       no

build {
    system "cd ${worksrcpath}/src/plugins/tiling && make install"
}

destroot {
    xinstall -d -m 755 ${destroot}${prefix}/lib/chunkwm/plugins
    xinstall -m 644 ${worksrcpath}/plugins/tiling.so ${destroot}${prefix}/lib/chunkwm/plugins

    xinstall -d -m 755 ${destroot}${prefix}/share/${name}
    xinstall -m 644 ${worksrcpath}/src/plugins/tiling/examples/chwmtilingrc ${destroot}${prefix}/share/${name}/chunkwmtilingrc
}

notes "******************************************************
To start using chunkwm, follow these instructions:
  1) Copy the example config from ${prefix}/share/${name}/chunkwmtilingrc
     into your home directory:
    cp ${prefix}/share/${name}/chunkwmtilingrc ~/.chunkwmtilingrc
******************************************************"
