build {
    system "cd ${worksrcpath}/src/plugins/ffm && make install"
}

destroot {
    xinstall -d -m 755 ${destroot}${prefix}/lib/chunkwm/plugins
    xinstall -m 644 ${worksrcpath}/plugins/ffm.so ${destroot}${prefix}/lib/chunkwm/plugins
}
